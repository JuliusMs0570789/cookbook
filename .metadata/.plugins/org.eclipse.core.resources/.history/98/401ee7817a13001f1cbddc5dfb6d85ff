package edu.sb.cookbook.service;

import javax.validation.constraints.PositiveOrZero;
import javax.ws.rs.*;
import javax.ws.rs.core.MediaType;

import edu.sb.cookbook.persistence.Person;

@Path("persons")
public class PersonService {
